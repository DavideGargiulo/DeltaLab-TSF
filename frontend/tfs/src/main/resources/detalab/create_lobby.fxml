<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" spacing="20.0" stylesheets="@create_lobby.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="detalab.Controller.CreateLobbyDialogController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="rotationLabel" text="Senso di Rotazione" />
            <ComboBox fx:id="rotationBox" prefWidth="150.0" styleClass="combo-box" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="privateLabel" text="Privato" />
            <CheckBox fx:id="privateCheckBox" mnemonicParsing="false" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#closeDialog" styleClass="action-button" text="Annulla" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="createButton" mnemonicParsing="false" onAction="#createLobby" styleClass="action-button" text="Crea" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
   </padding>
</VBox>
